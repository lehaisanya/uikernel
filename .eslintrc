{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "import",
    "typescript-custom-sort-keys",
    "xss",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "alloy",
    "alloy/react",
    "alloy/typescript",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect" // Tells eslint-plugin-react to automatically detect the version of React to use
    },
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts", ".jsx", ".tsx"]
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "jquery": true
  },
  "globals": {},
  "ignorePatterns": ["next-env.d.ts", "lib/**/*.*"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": false,
        "printWidth": 110
      }
    ],

    "import/first": "error",
    "import/newline-after-import": "error",
    "import/no-duplicates": "error",
    "import/no-anonymous-default-export": "error",
    "import/order": [
      "error",
      {
        "newlines-between": "never",
        "alphabetize": {"order": "asc", "caseInsensitive": true}
      }
    ],

    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "warn",
    "react/jsx-uses-vars": "warn",

    "jest/no-mocks-import": "off",

    "no-var": "error",
    "no-tabs": "error",
    "eol-last": "error",
    "no-trailing-spaces": "error",
    "quotes": ["error", "single", {"avoidEscape": true, "allowTemplateLiterals": true}],
    "strict": [2, "never"],
    "no-underscore-dangle": "off",
    "no-loop-func": "off",
    "no-undef": "error",
    "consistent-return": "off",
    "no-console": ["error", {"allow": ["warn", "error"]}],
    "prefer-const": ["error", {"destructuring": "all"}],
    "no-multiple-empty-lines": ["error", {"max": 1}],
    "max-len": [
      "error",
      {
        "code": 120,
        "tabWidth": 4,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ],
    "comma-dangle": ["error", "never"],
    "complexity": "off",
    "max-params": ["error", {"max": 10}],
    "no-unused-vars": ["error", {"vars": "all", "args": "after-used"}],
    "jsx-quotes": ["error", "prefer-double"],
    "no-case-declarations": "off",
    "keyword-spacing": ["error", {"before": true, "after": true}],
    "space-before-blocks": "error",
    "no-cond-assign": "off",
    "space-before-function-paren": [
      "error",
      {"anonymous": "always", "named": "never", "asyncArrow": "always"}
    ],
    "semi": "error",
    "spaced-comment": "error",
    "new-cap": "off",
    "no-multi-spaces": "error",
    "one-var": ["error", "never"],
    "padded-blocks": ["error", "never"],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": ["if", "class", "function", "export", "while", "for", "do"],
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": ["class", "function", "export", "while", "for", "do"]
      },
      {
        "blankLine": "any",
        "prev": ["const", "let"],
        "next": ["if", "while", "for", "do"]
      }
    ],
    "object-curly-spacing": ["error", "never"],
    "no-else-return": ["error", {"allowElseIf": false}],
    "curly": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "typescript-custom-sort-keys/interface": [
          "error",
          "asc",
          {
            "caseSensitive": true,
            "displayFirst": ["id"],
            "showFunctionsAtEnd": true
          }
        ],

        "@typescript-eslint/no-unused-vars": [
          "error",
          {"vars": "all", "args": "after-used", "argsIgnorePattern": "^_"}
        ],
        "@typescript-eslint/lines-between-class-members": [
          "error",
          "always",
          {"exceptAfterSingleLine": true}
        ],
        "@typescript-eslint/explicit-member-accessibility": ["error", {"accessibility": "no-public"}],
        "@typescript-eslint/no-parameter-properties": ["error", {"allows": ["private", "private readonly"]}],
        "@typescript-eslint/consistent-type-definitions": "off",
        "@typescript-eslint/member-ordering": "error",
        "@typescript-eslint/ban-ts-comment": "off",
        "@typescript-eslint/no-empty-function": "off",
        "@typescript-eslint/no-explicit-any": ["error"],
        "@typescript-eslint/no-var-requires": "error",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "@typescript-eslint/consistent-type-assertions": "error",
        "@typescript-eslint/explicit-function-return-type": ["error", {"allowExpressions": true}],
        "@typescript-eslint/no-non-null-assertion": "error",
        "@typescript-eslint/prefer-ts-expect-error": "error",
        "@typescript-eslint/no-unnecessary-boolean-literal-compare": "error",
        "@typescript-eslint/prefer-return-this-type": "error",
        "@typescript-eslint/no-redundant-type-constituents": "error",
        "@typescript-eslint/no-unnecessary-qualifier": "error",
        "@typescript-eslint/sort-type-constituents": ["error", {"checkIntersections": false}],
        "@typescript-eslint/switch-exhaustiveness-check": "error",
        "@typescript-eslint/array-type": "error",

        "no-throw-literal": "off",
        "no-magic-numbers": "off",
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ]
}
